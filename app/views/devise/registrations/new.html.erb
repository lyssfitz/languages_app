<h2>Create Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, placeholder: "First Name", autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, placeholder: "Last Name", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Email Address", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Create Password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, placeholder: "Create Password", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :date_of_birth, "Date of Birth" %>
    <%= f.date_field :date_of_birth %>
  </div>

  <p>Gender:</p>
  <% User.genders.keys.each do |option|%>
    <div class="field">
      <%= f.label "gender_#{option}".to_sym, option.titleize  %>
      <%= f.radio_button :gender, option %>
    </div>
  <% end %>

  <p>Do you want to be a Student or a Teacher?</p>
  <% User.roles.keys.each do |option| %>
    <div class="field">
      <%= f.label "role_#{option}".to_sym, option.titleize  %>
      <%= f.radio_button :role, option %>
    </div>
  <% end %>

  <p>What language do you want to learn?</p>
  <% Language.all.each do |option| %>
    <div class="field">
      <%= f.label :languages, option.name  %>
      <%= f.radio_button :languages, option.id %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :city, "City:" %>
    <%= f.select :city, [["Sydney, Australia"]]  %>
  </div>

  <div class="field">
    <%= f.label :biography, "Tell us about you" %><br />
    <%= f.text_area :biography, placeholder: "Add some details about yourself.." %>
  </div>

  <div class="actions">
    <%= f.submit "Create Account" %>
  </div>
<% end %>

<p>Already have an account?</p> <%= render "devise/shared/links" %>
